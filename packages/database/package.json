{
  "name": "@icat/database",
  "version": "1.0.0",
  "type": "module",
  "description": "Database library for Irfan Cars And Tours web application",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist .turbo",
    "push": "drizzle-kit push",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit generate && drizzle-kit migrate",
    "studio": "drizzle-kit studio"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "keywords": [
    "DB",
    "Irfan",
    "Cars",
    "And",
    "Tours"
  ],
  "license": "MIT",
  "author": "Muhammad Faizan",
  "packageManager": "npm@11.6.1",
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6"
  }
}
